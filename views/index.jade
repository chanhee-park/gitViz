extends layout

block content
    script(src="/d3/dist/d3.min.js")
    script(src="/d3-selection/dist/d3-selection.min.js")
    script(src="/d3-selection-multi/build/d3-selection-multi.min.js")
    script(src="/jquery/dist/jquery.min.js")
    script(src="/lodash/lodash.min.js")
    script(src="/babel-polyfill/dist/polyfill.min.js")
    //script(src="https://cdn.jsdelivr.net/npm/vue")
    link(rel='stylesheet' href='/stylesheets/layout.css')
    link(rel='stylesheet' href='/stylesheets/d3.renderer.css')

    .vis-comp-block-list
        .main-view
            .userNetwork-view
                .block-wrapper
                    .vis-comp-block.block
                        svg#userNetworkRenderer
            .check-box-list
                .check-box
                    input#keywordLink(type='checkbox')
                    label(for='keywordLink') Show keyword links.
                .check-box
                    input#userLink(type='checkbox')
                    label(for='userLink') Show user links.
                .check-box
                    input#userNode(type='checkbox')
                    label(for='userNode') Show only users with links.

        .sub-view
                .trend-view
                    .block-wrapper
                        .vis-comp-block.block
                            svg#trendRenderer
                .keyword-view
                    .block-wrapper
                        .vis-comp-block.block
                            svg#keywordRankingRenderer
                .project-list-view
                    .block-wrapper
                        .project-list.block#project-list

    script(src="/data.js")
    script(src="/util.js")
    script(src="/Constants.js")
    script(src="/d3/util.d3.js")
    script(src="/options.js")
    script(src="/d3/userNetwork.d3.js")
    script(src="/d3/trend.d3.js")
    script(src="/d3/keywordRanking.d3.js")
    script(src="/projects.block.js")





